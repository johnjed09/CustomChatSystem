<!DOCTYPE html>
<html>

<head>
    <title>Sign Up</title>
    <link rel="stylesheet" href="/css/bootstrap/bootstrap-4.5.2.min.css">
    <link rel="stylesheet" href="/css/style.css">

    <script src="/js/jquery-3.5.1.min.js"></script>
    <script src="/js/bootstrap-4.5.2.min.js"></script>
</head>

<body>
    <div class="wrapper">
        <form>
            <fieldset>
                <legend class="h2">REGISTER ACCOUNT</legend>

                <!-- ALERT MESSAGES -->
                <div id="alertPlaceholder"></div>
                <!-- ALERT MESSAGES -->

                <div class="upload-area">
                    <input type="file" id="fileD" name="uploaded_image">
                    <input type="button" class="fadeIn fourth" onclick="uploadImage()" id="uploadImg" value="Upload">
                </div>

                <label for="username">Username</label>
                <input type="text" id="username" class="fadeIn second" name="username">
                <label for="password">Password</label>
                <input type="password" id="password" class="fadeIn third" name="password">
                <label for="confirmPassword">Re-type Password</label>                
                <input type="password" id="confirmPassword" class="fadeIn third" name="confimPassword">

                <div class="redirectTo">
                    <a href="/login">Back to Login</a>
                </div>

                <input type="button" class="fadeIn fourth" onclick="saveUser()" value="Register">
            </fieldset>
        </form>
    </div>

    <input type="hidden" id="avatar_size" value="{{avatar_size}}">

    <script src='/js/register.js'></script>
</body>
</html>